### üìÑ `src/components/CourseCard.tsx`

```tsx
import { Course } from '../types/Course';
import './CourseCard.css';
import { Link } from 'react-router-dom';

interface Props {
  course: Course;
  onAddToCart?: (course: Course) => void;
  onAddToWishlist?: (course: Course) => void;
  isWishlisted?: boolean;
}

function CourseCard({ course, onAddToCart, onAddToWishlist, isWishlisted }: Props) {
  return (
    <div className="course-card">
      <Link to={`/course/${course.id}`}>
        <img src={course.image} alt={course.title} className="course-img" />
      </Link>

      <h3>{course.title}</h3>
      <p>By {course.author}</p>
      <p>{course.description}</p>

      <p>
        {course.discountedPrice ? (
          <>
            <span className="strike">‚Çπ{course.price}</span>
            <span className="discount"> ‚Çπ{course.discountedPrice}</span>
          </>
        ) : (
          <>‚Çπ{course.price}</>
        )}
      </p>

      <div style={{ display: 'flex', justifyContent: 'space-between', marginTop: '10px' }}>
        <button onClick={() => onAddToCart?.(course)}>Add to Cart</button>
        <button onClick={() => onAddToWishlist?.(course)}>
          {isWishlisted ? '‚òÖ' : '‚òÜ'}
        </button>
      </div>
    </div>
  );
}

export default CourseCard;
```

